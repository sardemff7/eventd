        <variablelist>
            <varlistentry>
                <term><command>eventd</command> core man pages</term>
                <listitem>
                    <variablelist>
                        <varlistentry>
                            <term><citerefentry><refentrytitle>eventd</refentrytitle><manvolnum>1</manvolnum></citerefentry></term>
